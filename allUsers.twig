{% extends 'layout.twig' %}
{% block headLinks %}
<link href="{{ domainData.SITE_WEB }}/{{ templateDir}}assets/plugins/highlight/styles/github-gist.css" rel="stylesheet">
<link href="{{ domainData.SITE_WEB }}/{{ templateDir}}assets/plugins/datatables/datatables.min.css" rel="stylesheet">
{% endblock %}

{% block titulek %}Přehled stránek{% endblock %}
{% block nadpis %}Seznam všech stránek{% endblock %}
{% block podNadpis %}{% endblock %}


{% block content %}
    <div class="section-description section-description-inline">
        <h1>Seznam uživatelů</h1>
    </div>

    <div class="card">
        <div class="card-body">
            <table id="datatable4" class="display" style="width:100%">
                <thead>
                    <tr>
                        <th>Jméno</th>
                        <th>E-mail</th>
                        <th>Aktivní</th>
                        <th>Role</th>
                        <th>Stránky</th>
                        <th>Akce</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in displayData %}
                        <tr>
                            <td>{{ user.user_name }}</td>
                            <td>{{ user.user_email }}</td>
                            <td>
                                {% if user.user_active %}
                                    <span class="badge badge-success">Aktivní</span>
                                {% else %}
                                    <span class="badge badge-danger">Neaktivní</span>
                                {% endif %}
                            </td>
                            <td>
                                {% for role in user.roles %}
                                    <span class="badge badge-info">{{ role.role_name }}</span>{% if not loop.last %}, {% endif %}
                                {% endfor %}
                            </td>
                            <td>
                                {% for role in user.roles %}
                                    {{ role.site_name }}{% if not loop.last %}, {% endif %}
                                {% endfor %}
                            </td>
                            <td>
                                <a href="{{ domainData.SITE_WEB }}/admin/editUser?id={{ user.user_id  }}" class="btn btn-primary btn-sm">Upravit</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <th>Jméno</th>
                        <th>E-mail</th>
                        <th>Aktivní</th>
                        <th>Role</th>
                        <th>Stránky</th>
                        <th>Akce</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
{% endblock %}
