    <script src="{{ domainData.SITE_WEB }}/{{ templateDir}}assets/plugins/datatables/datatables.min.js"></script>
    <script src="{{ domainData.SITE_WEB }}/{{ templateDir}}assets/js/main.min.js"></script>
